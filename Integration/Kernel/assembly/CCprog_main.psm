ProcessReadTrigCfg:
    ; Read the Trigger Configuration from LogCap
    ; And send it to the Frontend
    ;;00 00 FF FF FF FF 00 00
    ;----Snip from LogicCaptureTop----
    ; {regOut1, regOut0} <= desiredPattern;
    ; {regOut3, regOut2} <= activeChannels;
    ; {regOut5, regOut4} <= dontCareChannels;
    ; regOut6            <= edgeChannel;
    ; regOut7            <= {5'b00000, edgeType, edgeTriggerEnable, patternTriggerEnable};
    ;----
    LOAD    s0, CMD_LOGCAP_READ_TRIG_CFG
    OUTPUT  s0, PA_WRITE_LOGCAP_COMMAND    
    CALL    WaitForAck
    
    ; can't start with s0, because calls to UART_TX trashes it!!
    INPUT   s1, PA_READ_LOGCAP_REGISTER0; Get Total Trace Data Size
    INPUT   s2, PA_READ_LOGCAP_REGISTER1
    INPUT   s3, PA_READ_LOGCAP_REGISTER2
    INPUT   s4, PA_READ_LOGCAP_REGISTER3
    INPUT   s6, PA_READ_LOGCAP_REGISTER4
    ; s5 is missing here (did you find that odd?) because we skipped it.
    ; CALL UART_TX expects s5 as input. But since we still need this data
    ; after calling UART_TX. 
    INPUT   s7, PA_READ_LOGCAP_REGISTER5
    INPUT   s8, PA_READ_LOGCAP_REGISTER6
    INPUT   s9, PA_READ_LOGCAP_REGISTER7
    
    LOAD    s5, CMD_LOGCAP_ACK
    OUTPUT  s5, PA_WRITE_LOGCAP_COMMAND     ; Notify LogCap that we read the data 
    CALL    WaitForNonAck

    ;total = traceSizeByte0<<24 & traceSizeByte1<<16 & traceSizeByte2<<8 & traceSizeByte3<<0

    ;Send Packet to Frontend
    ;  Func Code      
    LOAD    s5, CMD_CC_READ_TRIG_CFG
    CALL    UART_TX
    
    ;  Payload Size - 8 Bytes
    LOAD    s5, 08
    CALL    UART_TX
    LOAD    s5, 00
    CALL    UART_TX
    LOAD    s5, 00
    CALL    UART_TX
    LOAD    s5, 00
    CALL    UART_TX
    
    ; Payload
    LOAD    s5, s1
    CALL    UART_TX
    LOAD    s5, s2
    CALL    UART_TX
    LOAD    s5, s3
    CALL    UART_TX
    LOAD    s5, s4
    CALL    UART_TX    
    LOAD    s5, s6  ;Note: couldn't put payload in s5 
                    ; because CALL UART_TX uses s5 as input register. TODO: fix uart_tx.
    CALL    UART_TX
    LOAD    s5, s7  
    CALL    UART_TX
    LOAD    s5, s8
    CALL    UART_TX
    LOAD    s5, s9
    CALL    UART_TX
    
    RETURN
